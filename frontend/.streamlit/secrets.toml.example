# Streamlit Cloud Secrets Configuration
# Add these secrets in Streamlit Cloud dashboard under Settings > Secrets

# Backend API Configuration
[general]
BACKEND_URL = "https://your-api-domain.elasticbeanstalk.com"

# Snowflake Configuration (Native Streamlit Integration)
[connections.snowflake]
account = "abc12345.us-east-1"
user = "your_username"
password = "your_password"
role = "ACCOUNTADMIN"
warehouse = "COMPUTE_WH"
database = "AWS_CERTIFICATIONS"
schema = "PUBLIC"
client_session_keep_alive = true

# Alternative: Direct Snowflake credentials (for custom connection)
[snowflake]
SNOWFLAKE_ACCOUNT = "abc12345.us-east-1"
SNOWFLAKE_USER = "your_username"
SNOWFLAKE_PASSWORD = "your_password"
SNOWFLAKE_WAREHOUSE = "COMPUTE_WH"
SNOWFLAKE_DATABASE = "AWS_CERTIFICATIONS"
SNOWFLAKE_SCHEMA = "PUBLIC"
SNOWFLAKE_ROLE = "ACCOUNTADMIN"
